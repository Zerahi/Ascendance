	<HediffDef ParentName="addedEnhancement">
		<defName>Ascendance_OrganicEnhanced</defName>
		<label>enhanced</label>
		<description>An enhanced natural body part.</description>
		<descriptionHyperlinks><ThingDef>Ascendance_Enhancement</ThingDef></descriptionHyperlinks>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>Applied</label>
				<painFactor>1.25</painFactor>
				<restFallFactorOffset>0.5</restFallFactorOffset>
				<hungerRateFactorOffset>1</hungerRateFactorOffset>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>Changing</label>
				<minSeverity>0.25</minSeverity>
				<painFactor>1.25</painFactor>
				<restFallFactorOffset>0.25</restFallFactorOffset>
				<hungerRateFactorOffset>0.5</hungerRateFactorOffset>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<label>Enhancing</label>
				<minSeverity>0.75</minSeverity>
				<partEfficiencyOffset>0.05</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.99</minSeverity>
				<partEfficiencyOffset>0.15</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

	<RecipeDef ParentName="AscendanceApplyEnhancement">

			<ThingDef>Ascendance_Enhancement</ThingDef>
			<HediffDef>Ascendance_OrganicEnhanced</HediffDef>
		</descriptionHyperlinks>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Ascendance_Enhancement</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Ascendance_Enhancement</li>
			</thingDefs>
		</fixedIngredientFilter>
